
@model List<WebApplication1.DBModel.Student>
@{
    ViewBag.Title = "Index";
}

@section scripts{
    <script>
        $(document).ready(function () {
            $("#query").click(function () {
                $("#form1").toggle("show");
            });
        });
    </script>
}


<a href="/TestEF/Create">添加学生</a>

<table border="1" width="400">
    <caption>
        <font style="font-family:KaiTi;font-size:18pt;color:black">
            学生信息列表
        </font>
    </caption>

    <th>编号</th> <th>姓名</th> <th>年龄</th> <th>操作</th>

    @foreach (WebApplication1.DBModel.Student s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Age</td>
            <td>
                <a href="/TestEF/Edit/@s.Id">编辑</a>
                <a href="/TestEF/Delete/@s.Id" onclick="return confirm('确认删除?')">删除</a>
            </td>
        </tr>
    }

</table>

<a href="#" id="query">查询</a>
<form id="form1" action="/TestEF/Query" method="post"  style="background-color:grey;width:200px;display:none;">
    姓名包含：<input type="text" name="s"/><br />
    年龄小于：<input type="text" name="a"/><br />
    <input type="submit" value="查询" />
</form>
